<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; padding-top:10%">Edit <%=home.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/homes/<%= home._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=home.name%>" name="home[name]"></input>                    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=home.price%>" name="home[price]" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=home.image%>" name="home[image]"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=home.description%>" name="home[description]"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form> 
            <a href="/homes">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>