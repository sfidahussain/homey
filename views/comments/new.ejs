<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; padding-top:10%">Add New Comment to <%= home.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/homes/<%=home._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]"></input>                    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form> 
            <a href="/homes/<%=home._id %>/comments">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>